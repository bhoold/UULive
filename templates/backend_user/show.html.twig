{% extends 'base.html.twig' %}

{% block title %}BackendUser{% endblock %}

{% block body %}
{{ include('widgets/nav.html.twig') }}

<div class="container-fluid">
  <div class="row">
  {{ include('widgets/nav_sidebar.html.twig') }}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">后台用户 :: 详情</h1>
        </div>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ backend_user.id }}</td>
            </tr>
            <tr>
                <th>Uuid</th>
                <td>{{ backend_user.uuid }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ backend_user.roles ? backend_user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ backend_user.password }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ backend_user.username }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-link" href="{{ path('backend_user_index') }}">back to list</a>

    <a class="btn btn-link" href="{{ path('backend_user_edit', {'id': backend_user.id}) }}">edit</a>

    {{ include('backend_user/_delete_form.html.twig') }}
    </main>
  </div>
</div>
{% endblock %}
