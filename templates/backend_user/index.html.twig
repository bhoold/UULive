{% extends 'base.html.twig' %}

{% block title %}BackendUser index{% endblock %}

{% block body %}
{{ include('widgets/nav.html.twig') }}

<div class="container-fluid">
  <div class="row">
  {{ include('widgets/nav_sidebar.html.twig') }}
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">后台用户 :: 列表</h1>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Uuid</th>
                    <th>Roles</th>
                    <th>Password</th>
                    <th>Username</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for backend_user in backend_users %}
                <tr>
                    <td>{{ backend_user.id }}</td>
                    <td>{{ backend_user.uuid }}</td>
                    <td>{{ backend_user.roles ? backend_user.roles|json_encode : '' }}</td>
                    <td>{{ backend_user.password }}</td>
                    <td>{{ backend_user.username }}</td>
                    <td>
                        <a href="{{ path('backend_user_show', {'id': backend_user.id}) }}">详情</a>
                        <a href="{{ path('backend_user_edit', {'id': backend_user.id}) }}">编辑</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-primary" role="button" href="{{ path('backend_user_new') }}">新增</a>
    </main>
  </div>
</div>
{% endblock %}
