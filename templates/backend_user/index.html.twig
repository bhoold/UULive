{% extends 'base.html.twig' %}

{% block title %}BackendUser index{% endblock %}

{% block body %}
    <h1>BackendUser index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Uuid</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Username</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for backend_user in backend_users %}
            <tr>
                <td>{{ backend_user.id }}</td>
                <td>{{ backend_user.uuid }}</td>
                <td>{{ backend_user.roles ? backend_user.roles|json_encode : '' }}</td>
                <td>{{ backend_user.password }}</td>
                <td>{{ backend_user.username }}</td>
                <td>
                    <a href="{{ path('backend_user_show', {'id': backend_user.id}) }}">show</a>
                    <a href="{{ path('backend_user_edit', {'id': backend_user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('backend_user_new') }}">Create new</a>
{% endblock %}
